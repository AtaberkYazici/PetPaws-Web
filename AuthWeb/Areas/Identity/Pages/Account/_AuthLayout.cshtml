@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8 mt-5">
        <div class="card login-logout-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="https://localhost:7069/Identity/Account/Login">
                            LogIn
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://localhost:7069/Identity/Account/Register">
                            Register
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div col-10 my-4>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @await RenderSectionAsync("Scripts", required: false)
<script>$(function () {
        const currentPage = location.pathname.toLowerCase();
        $('.nav-tabs li a').each(function () {
            const $this = $(this);
            const href = $this.attr('href').toLowerCase();
            var currentPathText = currentPage.split("/")[3];
            var currentHrefText = href.split("/")[5];
            if (currentPathText === currentHrefText) {
                $this.addClass('active');
            } 
        });
    });</script>
}